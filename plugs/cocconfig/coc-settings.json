{
  "languageserver":{
    "coc-clangd":{
      "command":"clangd",
      "filetypes":[
        "c",
        "cpp"
      ],
      "rootPatterns":[
        "compile_commands.json",
        ".git"
      ],
      "args":[
        "--compile-commands-dir=build",
        "--compile_args_from=filesystem",
        "--all-scopes-completion",
        "--background-index",
        "--clang-tidy",
        "--cross-file-rename",
        "--completion-parse=always",
        "--completion-style=detailed",
        "--function-arg-placeholders",
        "--header-insertion-decorators",
        "--query-driver=/usr/bin/**/clang-*,/home/adem/GCC-10/bin/g++*",
        "--header-insertion=never",
        "--limit-results=0",
        "-j=6",
        "--pch-storage=memory"
      ]
    },
   "go": {
	   "command": "gopls",
	   "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
	   "filetypes": ["go"],
	   "initializationOptions": {
		   "usePlaceholders": true
	   }
   }
  },
  "suggest.noselect": true,
   "suggest.disableKeymap": true,
   "coc.preferences.completion.autoTrigger" : true,
   "inlayHint.enable":true                 // 显示函数形参变量名https://www.reddit.com/r/neovim/comments/1116hno/coc_disabling_inlayhints
}

